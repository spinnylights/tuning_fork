%h1 Listing task_groups

%table
  %thead
    %tr
      %th Name
      %th Day
      %th
      %th
      %th

  %tbody
    - @task_groups.each do |task_group|
      %tr
        %td= task_group.name
        %td= task_group.day
        %td= link_to 'Show', task_group
        %td= link_to 'Edit', edit_task_group_path(task_group)
        %td= link_to 'Destroy', task_group, method: :delete, data: { confirm: 'Are you sure?' }

%br

= link_to 'New Task group', new_task_group_path
