= form_for @task_group do |f|
  - if @task_group.errors.any?
    #error_explanation
      %h2= "#{pluralize(@task_group.errors.count, "error")} prohibited this task_group from being saved:"
      %ul
        - @task_group.errors.full_messages.each do |message|
          %li= message

  .field
    = f.label :name
    = f.text_field :name
  .field
    = f.label :day
    = f.text_field :day
  .actions
    = f.submit 'Save'
